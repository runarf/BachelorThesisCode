<div class="container">
  <div class="row">
    <br><br><br><br>

    <%= form_tag('/trips', remote: true) do %>
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

        <div class="form-group">
          <%= label_tag(:from) %>
          <%= text_field_tag(:from)%>
        </div>
        <div class="form-group">
          <%= label_tag(:to, nil, placeholder: "to") %>
          <%= text_field_tag(:to) %>
        </div>

        <%= submit_tag 'Send', class: "form_submit btn btn-primary" %>
    <% end %>

    <div id="outputBus"></div>
    <div id="outputWalking"></div>

  </div>
</div>
